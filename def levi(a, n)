import turtle

def levi(a, n):
    if n == 0:
        turtle.forward(a)
        return
    else:
        turtle.left(45)
        levi(a, n-1)
        turtle.right(90)
        levi(a, n-1)
        turtle.left(45)

def main():
    a = turtle.numinput("Branch", "Recursion depth (0 - 1000):", minval=0, maxval=1000)
    n = turtle.numinput("Branch", "Recursion depth (0 - 8):", minval=0, maxval=8)
    levi(a,n)
    turtle.mainloop()


if __name__ == '__main__':
    main()
